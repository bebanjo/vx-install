{
  "builders": [
    {
      "flavor": "performance1-4",
      "image_name": "vexor_ci.worker {{timestamp}}",
      "provider": "rackspace-us",
      "region": "IAD",
      "source_image": "bb02b1a3-bc77-4d17-ab5b-421d89850fca",
      "ssh_username": "root",
      "type": "openstack"
    }
  ],
  "post-processors": null,
  "provisioners": [
    {
      "script": "packer/before.sh",
      "type": "shell"
    },
    {
      "destination": "/tmp/provision/",
      "source": "playbooks/",
      "type": "file"
    },
    {
      "destination": "/tmp/provision/",
      "source": "inventory/",
      "type": "file"
    },
    {
      "script": "packer/provision.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "OS_REGION_NAME=IAD",
        "OS_PASSWORD={{user `os_token`}}",
        "OS_USERNAME={{user `os_username`}}"
      ],
      "script": "packer/rackspace.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "os_token": "{{env `SDK_TOKEN`}}",
    "os_username": "{{env `SDK_USERNAME`}}"
  }
}

