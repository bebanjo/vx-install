description "start and stop the vexor cloud control daemon"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

setuid {{ vx_cloud_user }}
setgid {{ vx_cloud_user }}

script
  home={{ vx_home }}/cloud/current
  user={{ vx_cloud_user }}
  command="{{ vx_home }}/bin/{{ vx_cloud_user }}-control"

  chdir $home
  exec $command
end script


