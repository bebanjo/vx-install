RABBITMQ_URL={{ rabbitmq_url }}
DATABASE_URL={{ vx_db_url }}

{% if airbrake_api_key %}
AIRBRAKE_API_KEY={{ airbrake_api_key }}
{% endif %}

{% if airbrake_api_key and airbrake_host %}
AIRBRAKE_HOST={{ airbrake_host }}
{% endif %}

{% if github_key and github_secret %}
GITHUB_KEY={{ github_key }}
GITHUB_SECRET={{ github_secret }}
{% endif %}

{% if github_restriction %}
GITHUB_RESTRICTION={{ github_restriction }}
{% endif %}

{% if gitlab_url %}
{% for url in gitlab_url.split(',') %}
GITLAB_URL{{ loop.index }}={{ url }}
{% endfor %}
{% endif %}

{% if vx_web_hostname %}
VX_HOSTNAME={{ vx_web_hostname }}
{% endif %}
