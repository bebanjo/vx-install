description "start and stop the vexor worker"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

# env PATH={{ vexor_common_bin_dir }}:$PATH

script
  home={{ vexor_worker_home }}
  user={{ vexor_worker.user.name }}
  command="{{ vexor_common_bundle }} exec {{ vexor_worker_bin }}"

  chdir $home
  su -s /bin/sh -c "exec $command" $user
end script

