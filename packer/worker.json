{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-018c9568",
      "instance_type": "c3.large",
      "ssh_username": "ubuntu",
      "ami_name": "a0.vexor.io {{timestamp}}"
    },
  ],
  "provisioners": [
    {
      "script": "packer/before.sh",
      "type": "shell"
    },
    {
      "destination": "/tmp/provision/",
      "source": "playbooks/",
      "type": "file"
    },
    {
      "destination": "/tmp/provision/",
      "source": "inventory/",
      "type": "file"
    },
    {
      "script": "packer/provision.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "OS_REGION_NAME=IAD",
        "OS_PASSWORD={{user `os_token`}}",
        "OS_USERNAME={{user `os_username`}}"
      ],
      "script": "packer/rackspace.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "os_token": "{{env `AWS_ACCESS_KEY`}}",
    "os_username": "{{env `AWS_SECRET_KEY`}}"
  }
}

