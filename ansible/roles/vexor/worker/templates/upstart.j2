description "start and stop the vexor worker"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

script
  home={{ vexor_worker_home }}
  user={{ vexor_worker_user }}
  command="{{ vexor_bin_dir }}/bundle exec {{ vexor_worker_home }}/bin/vx-worker"

  export PATH={{ vexor_bin_dir }}:$PATH

  chdir $home
  exec su -s /bin/sh -c "PATH=$PATH exec $command" $user
end script

