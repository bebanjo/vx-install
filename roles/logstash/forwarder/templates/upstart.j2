description "start and stop the logstash-forwarder daemon"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

script
  home=/opt/logstash-forwarder
  command="./logstash-forwarder -config logstash-forwarder.conf"

  chdir $home
  exec $command
end script


