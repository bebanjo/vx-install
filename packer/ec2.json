{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-018c9568",
      "instance_type": "c3.xlarge",
      "ssh_username": "ubuntu",
      "ami_name": "a0.vexor.io {{timestamp}}",

      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 32,
          "delete_on_termination": true
        }
      ],
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 32,
          "delete_on_termination": true
        }
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "./inventory",
      "destination": "/tmp/provision"
    },
    {
      "type": "file",
      "source": "./credentials",
      "destination": "/tmp/provision"
    },
    {
      "type": "file",
      "source": "./playbooks",
      "destination": "/tmp/provision"
    },
    {
      "environment_vars": [
        "AWS_ACCESS_KEY={{user `aws_key`}}",
        "AWS_SECRET_KEY={{user `aws_secret`}}"
      ],
      "script": "packer/base.sh",
      "type": "shell"
    }
  ],

  "variables": {
    "aws_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret": "{{env `AWS_SECRET_KEY`}}"
  }
}

