description "start and stop the vexor worker"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

script
  home={{ vx_home }}/worker
  user={{ vx_worker_user }}
  command="{{ vx_home }}/bin/worker"

  exec start-stop-daemon -S -d $home -c $user:$user -g docker -x $command
end script

