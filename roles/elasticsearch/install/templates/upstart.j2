description "start and stop the elasticsearch daemon"
version "1.0"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
console log

setuid elasticsearch
setgid elasticsearch

script
  home=/opt/elasticsearch-{{ elasticsearch_version }}
  user=elasticsearch
  command="bin/elasticsearch -f"

  chdir $home
  exec $command
end script


